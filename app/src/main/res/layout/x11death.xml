<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Overflow/Close Button oben rechts -->
    <ImageButton
        android:id="@+id/btnOverflow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/close"
        android:padding="8dp"
        android:src="@drawable/ic_more_vert_24"
        app:tint="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Bild unterhalb des Overflow-Buttons -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/header_image"
        android:src="@drawable/death_picture"
        app:layout_constraintTop_toBottomOf="@id/btnOverflow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Beschreibungstext -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/lorem_short_x11"
        android:textSize="16sp"
        android:lineSpacingExtra="2dp"
        app:layout_constraintTop_toBottomOf="@id/headerImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button: Zur Startseite -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/to_home"
        android:layout_marginBottom="12dp"
        app:icon="@drawable/ic_arrow_right_24"
        app:iconGravity="textEnd"
        app:iconPadding="8dp"
        app:iconTint="?attr/colorOnSurface"
        app:layout_constraintTop_toBottomOf="@id/descriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
