<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:dividerHeight="12dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Einstellungen"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soundeffekte aktivieren" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swThemeDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dunkles Design erzwingen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Textgröße (%)"
            android:layout_marginTop="16dp"/>

        <SeekBar
            android:id="@+id/sbTextScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Speichern"
            app:icon="@drawable/ic_arrow_right_24"
            app:iconGravity="textEnd"
            app:iconPadding="8dp"/>
    </LinearLayout>
</ScrollView>
