<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Button: Zur Startseite -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to_home"
            android:layout_marginBottom="12dp"
            app:icon="@drawable/ic_arrow_right_24"
            app:iconGravity="textEnd"
            app:iconPadding="8dp"
            app:iconTint="?attr/colorOnSurface" />

        <!-- Bild -->
        <ImageView
            android:id="@+id/impressumImage"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:contentDescription="@string/impressum_title"
            android:scaleType="centerCrop"
            android:src="@drawable/impr_picture2" />

        <!-- Langer Text (scrollbar durch ScrollView) -->
        <TextView
            android:id="@+id/impressumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/impressum_long"
            android:textSize="16sp"
            android:lineSpacingExtra="3dp"
            android:textIsSelectable="true" />

    </LinearLayout>
</ScrollView>
